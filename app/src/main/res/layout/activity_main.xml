<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/instagradient"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="235dp"
        android:layout_height="47dp"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:shadowRadius="3"
        android:text="Don't have an account? Sign Up"
        android:onClick="signup"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="276dp"
        android:layout_height="89dp"
        android:layout_marginTop="92dp"
        android:fontFamily="cursive"
        android:text="Instagram"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="65dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="253dp"
        android:layout_height="59dp"
        android:layout_marginBottom="44dp"
        android:background="#3EFFFFFF"
        android:fontFamily="sans-serif-medium"
        android:onClick="login"
        android:shadowRadius="3"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="247dp"
        android:layout_height="126dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/usernameEntered"
            android:layout_width="247dp"
            android:layout_height="42dp"
            android:background="#2FFFFFFF"
            android:drawableTint="#FDFDFD"
            android:drawableTintMode="add"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />

        <EditText
            android:id="@+id/passwordEntered"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="104dp"
            android:background="#2FFFFFFF"
            android:drawableTint="#FFFDFD"
            android:drawableTintMode="add"
            android:ems="10"

            android:hint="Password"
            android:inputType="textPersonName"
            android:password="false"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>