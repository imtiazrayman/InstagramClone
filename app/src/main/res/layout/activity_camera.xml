<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CameraActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="187dp"
        android:layout_height="54dp"
        android:fontFamily="cursive"
        android:text="Instagram"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_button"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:onClick="goHome"
            app:srcCompat="@drawable/homeicon" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:layout_marginBottom="164dp"
            android:onClick="goSearch"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="65dp"
            android:layout_height="68dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/camera" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:layout_marginBottom="16dp"
            android:onClick="goLikes"
            app:srcCompat="@drawable/heart" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:onClick="goProfile"
            app:srcCompat="@drawable/personicon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="323dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:onClick="FullSizedPictureIntent"
            app:srcCompat="@drawable/captureicon" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="76dp"
            android:layout_height="71dp"
            android:onClick="goGallery"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/galleryicon"
           />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="77dp"
            android:layout_height="71dp"
            android:layout_marginStart="40dp"


            app:srcCompat="@drawable/paperplaneicon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="345dp"
        android:layout_height="370dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/captureimage" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="311dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="68dp"
            android:ems="10"
            android:hint="Comments"
            android:inputType="textPersonName"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>